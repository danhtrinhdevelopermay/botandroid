<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="open_assistant"
        android:enabled="true"
        android:icon="@drawable/ic_assistant"
        android:shortcutShortLabel="@string/shortcut_ai"
        android:shortcutLongLabel="@string/shortcut_ai_long"
        android:shortcutDisabledMessage="@string/shortcut_disabled">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.example.ai_assistant"
            android:targetClass="com.example.ai_assistant.MainActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
